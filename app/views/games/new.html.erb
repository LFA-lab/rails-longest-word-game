<div class="container mt-5">
  <div class="text-center">
    <h1 class="display-4 mb-4">Welcome to the Longest Word Game</h1>
    <p class="lead">Form the longest English word you can using the following letters:</p>

    <!-- Grille des lettres -->
    <div class="d-flex justify-content-center mb-4">
      <% @letters.each do |letter| %>
        <span class="badge bg-primary fs-3 m-1 p-3"><%= letter %></span>
      <% end %>
    </div>

    <!-- Formulaire de saisie du mot -->
    <%= form_tag(score_path, method: :post, data: { turbo: false }, class: "mt-4") do %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters.join(" ") %>

      <div class="input-group mb-3">
        <%= text_field_tag :word, nil, class: "form-control form-control-lg", placeholder: "Type your word here..." %>
        <button class="btn btn-success btn-lg" type="submit">Submit</button>
      </div>
    <% end %>
  </div>
</div>
